@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<DbProfiler.Client.Web.Modules.IndexViewModel>

<html>
    <head>
        <title>DbProfiler v0.0.1</title>   
        <script src="@Url.Content("~/Scripts/jquery-1.6.4-vsdoc.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.signalR-0.5.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.6.4.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.signalR-0.5.2.js")" type="text/javascript"></script>
    </head>
    <body>
        <script type="text/javascript">
            //on document load
            $(function () {
                var dbprofiler = $.connection().dbProfilerHub;

                dbprofiler.addMessage = function (message) {
                    $('#messages').append('<li>' + message + '</li>');
                };

                $.connection.hub.start();
            });
        </script>
        <h1>Messages Received:  </h1>
        <ul id="messages">
            
        </ul>
    </body>
</html>